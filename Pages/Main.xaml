<Page x:Class="savichev26pr.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:savichev26pr.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="700"
      Title="Main">

    <Grid Background="LightBlue">
        <Label Content="Поиск дешевых авиабилетов" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Margin="0,48,0,0"/>
        <Label Content="Откуда:" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Margin="0,116,0,0"/>
        <Label Content="Лучший способ купить авиабилеты дешево" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Margin="0,86,0,0"/>
        <TextBox x:Name="from" Margin="186,148,181,0" RenderTransformOrigin="0.5,0.5" Text="" Height="28" VerticalAlignment="Top">
        </TextBox>
        <Label Content="Куда:" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Margin="0,176,0,0"/>
        <TextBox x:Name="to" Margin="186,206,181,0" RenderTransformOrigin="0.5,0.5" Height="30" VerticalAlignment="Top"/>
        <Button Click="Search" VerticalAlignment="Top" HorizontalAlignment="Center" Height="28" Width="92" Content="Найти" Margin="0,252,0,0"/>
    </Grid>
</Page>
